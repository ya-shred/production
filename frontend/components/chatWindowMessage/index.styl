.chat-window
    width: calc(100vw - 301px);
    height: 100%
    border-left: 1px solid #E6E9F0
    border-right: 1px solid #E6E9F0

    &__content
        height: calc(100% - 140px)
        box-sizing: border-box
        border-bottom: 1px solid #E6E9F0
        position: relative

    &__box-send-message
        width: 100%
        height: 80px
        position: relative
        align-items: center
        box-sizing: border-box

