.header
    width: 100%
    height: 50px
    border-bottom: 1px solid #E6E9F0
    background: linear-gradient(#22262B, #22262B)
    display: flex
    align-items: center
    position: relative

    &__logo
        width: 100px
        margin: 0 auto
        @media handheld, only screen and (max-device-width:480px), all and (orientation:portrait)
            margin: 0 auto 0 20px
