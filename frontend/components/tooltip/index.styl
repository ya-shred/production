.chat-window
    &__content-item
        width: 100%
        display: flex
        padding: 15px 20px
        box-sizing: border-box
        &:hover
            .chat-window__content-edit
                display: block
        &_editing
            .chat-window__content-sending
                display: none
    &__content-avatar
        position: relative
        margin-right: 10px

    &__avatar
        width: 50px
        height: 50px
        border-radius: 50%
        border: 1px solid #fd5

    &__content-name
        font-size: 16px
        font-family: PTS
        color: #2d2d2d
        margin-bottom: 5px
        position relative
        display inline-block

    &__content-message
        width: 100%
        font-size: 14px
        line-height: 20px
        font-family: PT
        color: #3d3c40

    &__content-date
        text-indent: 10px
        padding-left: 5px
        font-size: 13px
        color: #999
        font-family: robothin

    &__content-sending
        padding-top: 5px


    &__content-edit
        position absolute
        width: 14px;
        height: 19px;
        right: -23px;
        cursor pointer
        top: -3px;
        display none
        background url("marker.svg") no-repeat
        &:hover
            background url("marker-active.svg") no-repeat